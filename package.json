{
  "name": "@boaterbase/bb-react-components",
  "version": "3.0.61",
  "description": "BoaterBase React Components",
  "source": "src/index.js",
  "main": "dist/index.js",
  "module": "dist/index.module.js",
  "modern": "dist/index.modern.js",
  "unpkg": "dist/index.umd.js",
  "jsdelivr": "dist/browser.umd.js",
  "files": [
    "dist/"
  ],
  "scripts": {
    "test": "jest --runInBand --detectOpenHandles",
    "dev": "npm run storybook & npm run watch-test & npm run watch-bundle",
    "watch": "npm run watch-test & npm run watch-bundle",
    "watch-test": "jest --watch --runInBand --detectOpenHandles",
    "watch-bundle": "microbundle watch --jsx React.createElement --no-compress --format cjs --strict",
    "build": "npm run build-css && npm run build-module && npm run build-browser",
    "build-module": "NODE_ENV=production microbundle --jsx React.createElement --no-compress --format cjs,modern,es --strict",
    "build-browser": "NODE_ENV=production microbundle --external react --jsx React.createElement --compress --format umd --strict",
    "build-css": "NODE_ENV=production postcss src/styles.css -o dist/styles.css && csso dist/styles.css --output dist/styles.min.css",
    "build-storybook": "NODE_ENV=production build-storybook -o docs/",
    "explorer": "source-map-explorer dist/index.umd.js",
    "storybook": "start-storybook -p 6006",
    "link-dev-react-hooks": "npm link ../bb-next/node_modules/react",
    "version": "npm run build",
    "patch": "npm version patch",
    "deploy": "npm publish --access public"
  },
  "keywords": [
    "boaterbase",
    "react",
    "components"
  ],
  "author": "Anthony Corcutt",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.14.3",
    "@babel/preset-env": "^7.14.4",
    "@babel/preset-react": "^7.13.13",
    "@storybook/addon-actions": "^6.2.9",
    "@storybook/addon-docs": "^6.2.9",
    "@storybook/addon-essentials": "^6.2.9",
    "@storybook/addon-links": "^6.2.9",
    "@storybook/addon-queryparams": "^6.2.9",
    "@storybook/react": "^6.2.9",
    "babel-loader": "^8.2.2",
    "cross-fetch": "^3.1.4",
    "csso-cli": "^3.0.0",
    "jest": "^26.6.3",
    "microbundle": "^0.13.1",
    "postcss": "^7.0.35",
    "postcss-cli": "^7.0.0",
    "postcss-import": "^12.0.0",
    "react": ">=17.0.2",
    "react-dom": ">=17.0.2",
    "react-is": "^17.0.2",
    "source-map-explorer": "^2.5.2",
    "tailwindcss": "npm:@tailwindcss/postcss7-compat@2.0.3"
  },
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  },
  "dependencies": {
    "@microlink/react": "^5.5.5",
    "@tailwindcss/aspect-ratio": "^0.2.0",
    "@tailwindcss/forms": "^0.2.1",
    "@tailwindcss/line-clamp": "^0.2.1",
    "@tailwindcss/typography": "^0.4.0",
    "algoliasearch": "^4.8.5",
    "autoprefixer": "^9.8.6",
    "classnames": "^2.2.6",
    "cloudinary-core": "^2.11.3",
    "cloudinary-react": "^1.6.8",
    "firebase": "^8.4.1",
    "formatcoords": "^1.1.3",
    "mapbox-gl": "^1.13.0",
    "markdown-to-jsx": "^7.1.3",
    "nanoid": "^3.1.23",
    "prop-types": "^15.7.2",
    "qs": "^6.10.1",
    "react-hook-form": "6.15.3",
    "react-instantsearch-dom": "^6.9.0",
    "react-outside-click-handler": "^1.3.0",
    "react-qr-svg": "^2.3.0",
    "react-spring": "^8.0.27",
    "react-uid": "^2.3.1",
    "react-use": "^17.2.4",
    "slugify": "^1.5.3",
    "styled-components": "^5.2.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/BoaterBase/bb-react-components.git"
  }
}
